# FamilyList Configuration

# API Key for authentication
API_KEY=your-secure-api-key-here

# Database path (relative to backend or absolute)
DATABASE_URL=sqlite:///./data/familylist.db

# Environment
ENVIRONMENT=development

# Server settings
HOST=0.0.0.0
PORT=8000

# AI Model settings (optional - defaults work for most cases)
# EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM for natural language parsing (e.g., "stuff for tacos" â†’ multiple items)
ENABLE_LLM_PARSING=true
LLM_BACKEND=openai
OPENAI_API_KEY=your-openai-api-key-here
# LLM_OPENAI_MODEL=gpt-4o-mini

# Web Push Notifications (VAPID keys)
# Generate with: python -c "from py_vapid import Vapid; v=Vapid(); v.generate_keys(); print('VAPID_PRIVATE_KEY=' + v.private_pem); print('VAPID_PUBLIC_KEY=' + v.public_key)"
# VAPID_PRIVATE_KEY=your-base64-private-key
# VAPID_PUBLIC_KEY=your-base64-public-key
# VAPID_MAILTO=mailto:admin@example.com
